# /etc/systemd/system/agenttoyota.service
[Unit]
Description=Toyota React UI (Vite preview on :3000)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/agenttoyota/agenttoyota-ui

# Use Node installed by nvm (adjust version/path if yours differs)
Environment=PATH=/home/ubuntu/.nvm/versions/node/v22.20.0/bin:/usr/local/bin:/usr/bin
Environment=NODE_ENV=production

# Serve the built 'dist' with Vite preview on all interfaces, port 3000
ExecStart=/home/ubuntu/.nvm/versions/node/v22.20.0/bin/npm run preview -- --host 0.0.0.0 --port 3000

Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
